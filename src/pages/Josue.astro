---
import "@fortawesome/fontawesome-free/css/all.min.css";
import "../styles/global.css";
import { Image } from 'astro:assets';
import Portada from '../components/img/portada.png'
import Layout from '../layouts/Layout.astro';
import josue from '../components/img/josue.jpeg'
---
<Layout>
<div class="min-h-screen bg-[#000001] from-gray-200 via-gray-300 to-gray-200 flex items-center justify-center">
  <div class="w-full max-w-2xl bg-[#000001] shadow-2xl overflow-hidden ">
    <!-- Cover Image -->
    <div class="relative h-48 overflow-hidden">
      <img src={Portada.src} alt="NEXSITE Cover" class="w-full h-full object-cover" />
    </div>

    <!-- Profile Image -->
    <div class="relative px-8 -mt-20 fade-up">
      <div class="w-36 h-36 rounded-2xl overflow-hidden border-4 border-[#000001] shadow-xl bg-gray-200">
        <img
          src={josue.src}
          alt="Josue Salvador"
          class="w-full h-full object-cover"
        />
      </div>
    </div>

    <!-- Content -->
    <div class="px-8 pt-6 pb-8">
      <!-- Name and Title -->
      <h1 class="text-4xl font-bold text-white mb-2 fade-left">Josue Salvador</h1>
      <h2 class="text-2xl font-semibold text-gray-300 mb-4 fade-right">Ingeniero de Software</h2>

      <!-- Description -->
      <p class="text-gray-400 leading-relaxed mb-8 fade-left">
        Especialista en desarrollo full-stack con más de 3 años de experiencia creando soluciones digitales
        innovadoras. Experto en React, Next.js, Node.js y Laravel.
      </p>

      <!-- Contact Information Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
  <!-- Email -->
  <div class="flex items-center gap-3 bg-gray-800 rounded-xl p-4 contact-card group">
    <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center shrink-0">
      <i class="fas fa-envelope text-gray-300 text-lg"></i>
    </div>
    <div class="min-w-0 flex-1">
      <p class="text-xs text-gray-500 mb-0.5">Email</p>
      <p class="text-sm font-medium text-gray-200 truncate">ventas@nexsite.com.mx</p>
    </div>
    <div class="flex gap-2 ">
      <button 
        onclick="window.location.href='mailto:ventas@nexsite.com.mx'"
        class="w-9 h-9 bg-gray-700 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-all duration-300 "
        title="Enviar email"
      >
        <i class="fas fa-paper-plane text-gray-300 text-sm "></i>
      </button>
      <button 
        onclick="navigator.clipboard.writeText('ventas@nexsite.com.mx'); this.querySelector('.copy-feedback').classList.add('show'); setTimeout(() => this.querySelector('.copy-feedback').classList.remove('show'), 2000);"
        class="w-9 h-9 bg-gray-700 hover:bg-green-600 rounded-lg flex items-center justify-center transition-all duration-300 relative"
        title="Copiar email"
      >
        <i class="fas fa-copy text-gray-300 text-sm"></i>
        <span class="copy-feedback absolute -top-8 left-1/2 -translate-x-1/2 bg-green-600 text-white text-xs px-2 py-1 rounded whitespace-nowrap opacity-0 pointer-events-none transition-opacity duration-200">
          ¡Copiado!
        </span>
      </button>
    </div>
  </div>

  <!-- Phone -->
  <div class="flex items-center gap-3 bg-gray-800 rounded-xl p-4 contact-card group">
    <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center shrink-0">
      <i class="fas fa-phone text-gray-300 text-lg"></i>
    </div>
    <div class="min-w-0 flex-1">
      <p class="text-xs text-gray-500 mb-0.5">Teléfono</p>
      <p class="text-sm font-medium text-gray-200">+55 444 577 6655</p>
    </div>
    <div class="flex gap-2">
      <button 
        onclick="window.location.href='tel:+5544455833374'"
        class="w-9 h-9 bg-gray-700 hover:bg-green-600 rounded-lg flex items-center justify-center transition-all duration-300"
        title="Llamar"
      >
        <i class="fas fa-phone-alt text-gray-300 text-sm"></i>
      </button>
      <button 
        onclick="navigator.clipboard.writeText('+55 444 558 3374'); this.querySelector('.copy-feedback').classList.add('show'); setTimeout(() => this.querySelector('.copy-feedback').classList.remove('show'), 2000);"
        class="w-9 h-9 bg-gray-700 hover:bg-blue-600 rounded-lg flex items-center justify-center transition-all duration-300 relative"
        title="Copiar teléfono"
      >
        <i class="fas fa-copy text-gray-300 text-sm"></i>
        <span class="copy-feedback absolute -top-8 left-1/2 -translate-x-1/2 bg-blue-600 text-white text-xs px-2 py-1 rounded whitespace-nowrap opacity-0 pointer-events-none transition-opacity duration-200">
          ¡Copiado!
        </span>
      </button>
    </div>
  </div>

  <!-- Location -->
  <button 
    onclick="window.open('https://www.google.com/maps/search/San+Luis+Potosí,+S.L.P', '_blank')"
    class="flex items-center gap-3 bg-gray-800 rounded-xl p-4 contact-card hover:bg-gray-700 transition-all duration-300 cursor-pointer group"
  >
    <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center shrink-0 group-hover:bg-gray-600 transition-colors">
      <i class="fas fa-map-marker-alt text-gray-300 text-lg"></i>
    </div>
    <div class="min-w-0 flex-1 text-left">
      <p class="text-xs text-gray-500 mb-0.5">Ubicación</p>
      <p class="text-sm font-medium text-gray-200">San Luis Potosí, S.L.P</p>
    </div>
    <i class="fas fa-external-link-alt text-gray-500 group-hover:text-gray-300 transition-colors"></i>
  </button>

  <!-- Website -->
  <button 
    onclick="window.open('https://nexsite.com.mx', '_blank')"
    class="flex items-center gap-3 bg-gray-800 rounded-xl p-4 contact-card hover:bg-gray-700 transition-all duration-300 cursor-pointer group"
  >
    <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center shrink-0 group-hover:bg-gray-600 transition-colors">
      <i class="fas fa-globe text-gray-300 text-lg"></i>
    </div>
    <div class="min-w-0 flex-1 text-left">
      <p class="text-xs text-gray-500 mb-0.5">Sitio Web</p>
      <p class="text-sm font-medium text-gray-200">nexsite.com.mx</p>
    </div>
    <i class="fas fa-external-link-alt text-gray-500 group-hover:text-gray-300 transition-colors"></i>
  </button>
</div>


      <!-- Specialties -->
      <div class="mb-8">
  <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">ESPECIALIDADES</h3>
  <div class="skills-container relative  rounded-lg p-6 border border-zinc-800" style="height: 250px;">
    {["React", "UX/UI", "Tailwind", "Node.js", "Laravel", "PostgreSQL"].map((skill) => (
      <span
        class="skill-badge px-4 py-2 bg-gray-800 text-gray-300 rounded-full text-sm font-medium border border-gray-700 hover:bg-gray-700"
      >
        {skill}
      </span>
    ))}
  </div>
</div>

      <!-- Social Links -->
      <div class="flex gap-3 pt-6 border-t border-gray-800 ">
        <a href="https://www.facebook.com/profile.php?id=61561482432789" class="w-12 h-12 bg-gray-800 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors fade-left">
          <i class="fa-brands fa-facebook text-gray-300 text-lg"></i>
        </a>
        <a href="https://www.instagram.com/info.nexsite/" class="w-12 h-12 bg-gray-800 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors fade-up">
          <i class="fa-brands fa-instagram text-gray-300 text-lg"></i>
        </a>
        <a href="https://api.whatsapp.com/send?phone=5214445583374&text=Buen%20d%C3%ADa%2C%20%C2%BFMe%20podr%C3%ADa%20dar%20m%C3%A1s%20informaci%C3%B3n%3F%20" class="w-12 h-12 bg-gray-800 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors fade-right">
                  <i class="fa-brands fa-whatsapp text-gray-300 text-lg"></i>
        </a>
        <a href="https://nexsite.com.mx/" class="w-12 h-12 bg-gray-800 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors fade-up">
          <i class="fas fa-globe text-gray-300 text-lg"></i>
        </a>
      </div>
    </div>
  </div>
</div>

</Layout>

<script src="/js/animaciones.js" is:inline></script>

<style>
  .copy-feedback.show {
    opacity: 1 !important;
  }
</style>